

1. Program to Check Palindrome String

class PalindromeString {
    public static void main(String[] args) {
        String s = "madam", rev = "";
        for (int i = s.length() - 1; i >= 0; i--)
            rev += s.charAt(i);

        if (s.equals(rev))
            System.out.println("Palindrome");
        else
            System.out.println("Not Palindrome");
    }
}


2. Program to Find Factorial Using Recursion

class Factorial {
    static int fact(int n) {
        if (n == 1) return 1;
        return n * fact(n - 1);
    }
    public static void main(String[] args) {
        System.out.println(fact(5));
    }
}



3. Program to Find Fibonacci Series

class Fibonacci {
    public static void main(String[] args) {
        int a = 0, b = 1, n = 10;
        System.out.print(a + " " + b);
        for (int i = 2; i < n; i++) {
            int c = a + b;
            System.out.print(" " + c);
            a = b;
            b = c;
        }
    }


4. Program to Find Largest of Three Numbers

class Largest {
    public static void main(String[] args) {
        int a = 10, b = 20, c = 15;
        if (a > b && a > c)
            System.out.println(a);
        else if (b > c)
            System.out.println(b);
        else
            System.out.println(c);
    }
}



5. Program to Count Vowels in a String

class Vowels {
    public static void main(String[] args) {
        String s = "education";
        int count = 0;
        for (char c : s.toCharArray()) {
            if ("aeiouAEIOU".indexOf(c) != -1)
                count++;
        }
        System.out.println("Vowels: " + count);
    }
}



6. Program to Check Prime Number

class Prime {
    public static void main(String[] args) {
        int n = 7, flag = 1;
        for (int i = 2; i <= n / 2; i++) {
            if (n % i == 0) {
                flag = 0;
                break;
            }
        }
        if (flag == 1)
            System.out.println("Prime");
        else
            System.out.println("Not Prime");
    }
}


7. Program to Reverse a Number

class ReverseNumber {
    public static void main(String[] args) {
        int n = 1234, rev = 0;
        while (n != 0) {
            rev = rev * 10 + n % 10;
            n /= 10;
        }
        System.out.println(rev);
    }
}




8. Program to Demonstrate Method Overloading

class Overload {
    int add(int a, int b) {
        return a + b;
    }
    double add(double a, double b) {
        return a + b;
    }
    public static void main(String[] args) {
        Overload o = new Overload();
        System.out.println(o.add(10, 20));
        System.out.println(o.add(5.5, 4.5));
    }
}


9. Program to Demonstrate Inheritance

class Animal {
    void eat() {
        System.out.println("Eating...");
    }
}
class Dog extends Animal {
    void bark() {
        System.out.println("Barking...");
    }
    public static void main(String[] args) {
        Dog d = new Dog();
        d.eat();
        d.bark();
    }
}


10. Program to Handle Exception (Divide by Zero)

class ExceptionDemo {
    public static void main(String[] args) {
        try {
            int a = 10 / 0;
        } catch (ArithmeticException e) {
            System.out.println("Cannot divide by zero");
        }
    }
}

